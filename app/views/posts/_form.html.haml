= simple_form_for @post do |f|
  = f.input :title, label: 'Título', input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' }
  = f.input :content, label: "Conteúdo", input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' }
  = f.input :deck, label: "Deck", collection: current_user.decks, label_method: :name, value_method: :id, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' }
  = f.submit "Criar Post", class: 'btn btn-primary'
