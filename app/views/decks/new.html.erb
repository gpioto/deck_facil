<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Novo Deck</h3>
            </div>
            <div class="box-body">
                <div class = "col-xs-3" style="width: 28%"></div>
                <div class = "col-xs-6">
                  <%= simple_form_for @deck do |f| %>
                    <div class="form-group has-feedback">
                      <%= f.input :name, class: 'form-control', :label => "Nome:" %>
                    </div>
                  <div class="form-group has-feedback">
                     <%= f.input :format, :as => :select, 
                             :label => "Formato:", :include_blank => false,
                             class: 'form-control',
                             :collection => [['Modern','Modern'],['Standard','Standard'],['Legacy','Legacy'],['Vintage','Vintage'],['Draft','Draft'],['Sealed','Sealed']] %>
                  </div>           
                             
                    <div class="form-group has-feedback">
                      <%= f.input :description, class: 'form-control', :label => 'Descrição:' %>
                    </div>  
                    
                    <div class="row">
                      <div class="col-xs-4"></div>
        					    <div class="col-xs-8">
                        <%= f.button :submit, "Criar Deck"  %>
                      </div>
                    </div>  
                    
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>