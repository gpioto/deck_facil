<div class="row">
    <section class="content-header">
      <% flash.each do |name, msg| -%>
				<div class="alert alert-<%= name %>"><%= msg %></div>
			<% end -%>
      <h1>
        Meus Decks
        <!-- <button class="btn btn-primary pull-right">Novo Deck</button> -->
        <%= link_to "Novo Deck", new_deck_path, class: "btn btn-primary pull-right"  %>
      </h1>
      <br>
    </section>
    <% if @decks.empty? %>
    <div class="col-sm-6 col-md-4">
      Você não possui nenhum Deck. <%= link_to "Crie um novo!", new_deck_path%>
    </div>
    <% end %>
    <% @decks.each do |deck| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="http://lorempixel.com/100/200/">
          <div class="caption">
            <h3><%= deck.name %></h3>
            <h4>
              <b>Formato:</b> <%= deck.format %>
            </h4>
            <p><%= deck.description %></p>
            <p class="clearfix">
                <a href="#" class="btn btn-default pull-left" role="button">Editar</a>
                 <%= link_to url_for(action: :destroy, id: deck.id), class: "btn btn-danger pull-right", method: :delete, data: {confirm: 'Tem certeza que quer deletar este Deck?'} do%>
                   Remover
                 <% end %>
            </p>
          </div>
        </div>
    </div>
    <% end %>
    
</div>
