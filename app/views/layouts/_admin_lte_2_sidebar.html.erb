<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="<%= current_user.profile_image_url.present? ? current_user.profile_image_url : 'http://www.collegecasts.com/wp-content/uploads/2013/11/no-pic.jpg' %>" class="img-circle" alt="User Image" />
      </div>
      <div class="pull-left info">
        <p><%= current_user.profile_name %></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <!-- search form (Optional) -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Pesquisar..."/>
        <span class="input-group-btn">
          <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
        </span>
      </div>
    </form>
    <!-- /.search form -->

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">Opções</li>
        <!-- Optionally, you can add icons to the links -->
      <li class="<%= 'active' if params[:action] == 'dashboard' %>"><a href="<%= url_for(controller: 'dashboard', action: 'dashboard', only_path: true) %>"><i class='fa fa-link'></i> <span>Home</span></a></li>
      <li class="<%= 'active' if params[:action] == 'deck' %>"><a href="<%= url_for(controller: 'dashboard', action: 'deck', only_path: true) %>"><i class='fa fa-link'></i> <span>Meu Deck</span></a></li>
      <li class="<%= 'active' if params[:controller] == 'posts' %>"><a href="<%= url_for(controller: 'posts', action: 'index', only_path: true) %>"><i class='fa fa-link'></i> <span>Fórum</span></a></li>
      <li class="<%= 'active' if params[:controller] == 'preferences' %>"><a href="<%= url_for(controller: 'preferences', action: 'preferences', only_path: true) %>"><i class='fa fa-link'></i> <span>Preferências</span></a></li>
      <!--li class="treeview">
        <a href="#"><i class='fa fa-link'></i> <span>Multilevel</span> <i class="fa fa-angle-left pull-right"></i></a>
        <ul class="treeview-menu">
          <li><a href="#">Link in level 2</a></li>
          <li><a href="#">Link in level 2</a></li>
        </ul>
      </l-->
    </ul><!-- /.sidebar-menu -->
  </section>

  <!-- /.sidebar -->
</aside>
