<!-- Main Header -->
<header class="main-header">

  <!-- Logo -->
  <a href="/" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>DK</b>F</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Deck</b>Fácil</span>
  </a>

  <!-- Header Navbar -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- Messages: style can be found in dropdown.less-->
        <!-- Notifications Menu --
        <!-- Tasks Menu -->
        <!-- User Account Menu -->
        <li class="dropdown user user-menu">
          <!-- Menu Toggle Button -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <!-- The user image in the navbar-->
           <img src="<%= current_user.profile_image_url.present? ? current_user.profile_image_url : 'http://www.collegecasts.com/wp-content/uploads/2013/11/no-pic.jpg' %>" class="user-image" alt="User Image"/>
            <!-- hidden-xs hides the username on small devices so only the image appears. -->
            <% if current_user %>
            <span class="hidden-xs"><%= current_user.name %></span>
            <% end %>

          </a>
          <ul class="dropdown-menu">
            <!-- The user image in the menu -->
            <li class="user-header">
              <img src="<%= current_user.profile_image_url %>" class="img-circle" alt="User Image" />
              <p>
                <%= current_user.name %>
                <small>Usuário</small>
              </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
              <!--
              <div class="col-xs-4 text-center">
                <a href="#">Followers</a>
              </div>
              <div class="col-xs-4 text-center">
                <a href="#">Sales</a>
              </div>
              <div class="col-xs-4 text-center">
                <a href="#">Friends</a>
              </div>
              -->
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <a href="<%= url_for(controller: 'preferences', action: 'profile', only_path: true) %>" class="btn btn-default btn-flat">Editar Perfil</a>
              </div>
              <div class="pull-right">
                <a href="<%= url_for(controller: 'session', action: 'logout', only_path: true) %>" class="btn btn-default btn-flat">Logout</a>
              </div>
            </li>
          </ul>
        </li>
        <li>
          <a id="logout" href="<%= url_for(controller: 'session', action: 'logout', only_path: true) %>">
            <i class="fa fa-sign-out"></i>
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>
